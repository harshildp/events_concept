<% if flash[:register] %>
<script>
    $(document).ready(function(){
        $(".btn-toggle").click();
    });
</script>
<% end %>
<div id='signin'>
<div class='container'>
    <div class='row justify-content-center'>
    <div class="btn-group btn-toggle"> 
      <button class="btn btn-primary" data-toggle="collapse" data-target=".collapsible">Login</button>
      <button class="btn btn-default active" data-toggle="collapse" data-target=".collapsible">Register</button>
    </div>
    </div>
    <div class='row'>
        <div class='col-6'>
            <div id='login' class='collapsible'>
                <h1>Log in</h1>
                <form action='<%= login_path %>' method='post'>
                    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                    <div class="form-group">
                        <input type="email" class="form-control" id="login_email" name='email' placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="login_password" placeholder="Password" name='password'>
                        <%= render 'shared/errors', type: 'invalid'%>                    
                    </div>
                    <button type="submit" class="btn btn-success">Log in</button>  
                </form>
            </div>
        </div>
        

        <div id='register' class='collapsible col-6'>
            <h1>Register</h1>
            <form action='<%= register_path %>' method='post'>
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <div class="form-group">
                    <input type="text" class="form-control" id="first_name" name='user[first_name]' placeholder="First Name">
                    <%= render 'shared/errors', type: 'first_name'%>
                </div>  
                <div class="form-group">
                    <input type="text" class="form-control" id="last_name" name='user[last_name]' placeholder="Last Name">
                    <%= render 'shared/errors', type: 'last_name'%>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" id="register_email" name='user[email]' placeholder="Email">
                    <%= render 'shared/errors', type: 'email'%>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="location" name='user[location]' placeholder="Location">
                    <%= render 'shared/errors', type: 'location'%>                    
                </div>
                <div class="form-group">
                    <select class="form-control" id="state" name='user[state]'>
                        <option value="" disabled selected hidden>State</option>
                        <% @states.each do |s| %>
                            <option value='<%= s %>'><%= s %></option>
                        <% end %>
                    </select>
                    <%= render 'shared/errors', type: 'state'%>                    
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="register_password" name='user[password]' placeholder="Password">
                    <%= render 'shared/errors', type: 'password'%>                    
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password_confirmation" name='user[password_confirmation]' placeholder="Password Confirmation">
                    <%= render 'shared/errors', type: 'password_confirmation'%>                    
                </div>
                <button type="submit" class="btn btn-success">Register</button>
            </form>
        </div>
    </div>
</div>
</div>


